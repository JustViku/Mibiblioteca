<!-- LIBROS EDUCATIVOS  -->
<div class="container p-3">
            <div class="row">
                <h2>Libros Educativos</h2> 
            </div> 
            
            <div class="row " id="main" style="margin-top: 40px;font-size: 0.75em;">
                {{#each educa}} 
                <div class="col-sm-4 col-md-4 col-lg-3 m-1"> 
                    <div class="card" >
                        <img class="card-img-top mx-auto" src="uploads/{{image}}" style="width:40%" alt="01">
                        <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                        
                            
                        <a target="_blank" href="uploads/{{archivo}}" class="btn btn-dark m-2">Leer libro</a>
                        <form action="/libros/favoritos" method="POST" enctype="multipart/form-data">                            
                                <!-- añadir inputs en invisible que pasen texto,image,title,description para hacer una consulta a la base de dtos donde insete libro favorito con el id user-->
                                <div class="form-group d-none">
                                    <input value="{{title}}" type="text" class="form-control" name="title" placeholder="Title">
                                </div>
                                <div class="form-group d-none">
                                    <input value="{{image}}" type="text" class="form-control" name="image" placeholder="Sube una portada">
                                </div>
                                <div class="form-group d-none">
                                    <input value="{{archivo}}" type="text" class="form-control" name="archivo" placeholder="Sube el texto">
                                </div>
                                
                                <button type="submit" class="btn btn-link text-warning m-2">
                                    Añadir a Favorito 
                                </button>
                            
                        </form>                                               
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
    </div>
</div>
